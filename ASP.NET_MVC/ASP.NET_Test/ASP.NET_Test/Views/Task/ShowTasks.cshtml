@model List<ASP.NET_Test.ViewModels.TaskTaskItemCountViewModel>

@{
    ViewBag.Title = "ShowTasks";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
		    <div class="row-fluid">
			  <div class="span12">
                <p class="col-md-offset-11 col-xs-offset-8">@Html.ActionLink("Add new task", "AddTask", "Task", new { categoryId = Model[0].CategoryId}, null)</p>
                <div class="page-header">                 
                  <h3>My tasks:</h3>
                </div>
                <div class="list-group">
                @if (Model[0].Count == -1)
                {
                }
                else
                {
                for (int i = 0; i < Model.Count;i++ ) 
                {
                    @Html.Partial("~/Views/Task/_TaskTaskItemCount.cshtml", Model[i]);
                }
                }
                </div>
              </div>
            </div>