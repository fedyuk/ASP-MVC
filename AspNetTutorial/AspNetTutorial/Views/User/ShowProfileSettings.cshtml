@{
    Layout = null;
}
@model AspNetTutorial.Models.User
<!DOCTYPE html>

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Profile</title>


    <link href="http://twbs.docs.org.ua/dist/css/bootstrap.min.css" rel="stylesheet">


    <link href="http://twbs.docs.org.ua/examples/dashboard/dashboard.css" rel="stylesheet">

  

    <script src="http://twbs.docs.org.ua/assets/js/ie-emulation-modes-warning.js"></script>

    <script src="http://code.jquery.com/jquery-1.11.3.min.js"></script>
    <script src="http://code.jquery.com/jquery-migrate-1.2.1.min.js"></script>

  </head>

  <body>

    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Profile","ShowProfileSettings","User")</li>
            <li>@Html.ActionLink("Help","Help","User")</li>
            <li>@Html.ActionLink("Logout","Logout","Login")</li>
          </ul>
        </div>
      </div>
    </nav>
    <div class="container-fluid">
      <div class="row">
        <div class="col-sm-3 col-md-2 sidebar">
          <ul class="nav nav-sidebar">
            <li>@Html.ActionLink("My notes","ShowNotes","Note")</li>
            <li>@Html.ActionLink("Create","CreateNote","Note")</li>
            <li>@Html.ActionLink("Search","SearchNote","Note")</li>
          </ul>
        </div>
        <div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
        <div class="page-header">
        <h3>Your profile details:</h3>
      </div>
      <div class="row">
        <div class="container-fluid">
		<div class="row-fluid">
			<div class="span12">
                <table class="table">
            <thead>
              <tr>
                <th>Your ID</th>
                <th>Your name</th>
                <th>Your pasword</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>@Model.UserId</td>
                <td>@Model.Name</td>
                <td>@Model.Password</td>
                <td>
                    <a href="#" id="changePassword">Change password</a>
                </td>
              </tr>
            </tbody>
          </table>
                <div class="span12" id="ChangePasswordBlock" style="visibility: hidden;">
                <div class="page-header">
                  <h3>Change password:</h3>
                </div>
				<fieldset>
				 @using (Html.BeginForm("ShowProfileSettings", "User", FormMethod.Post, new { @class = "form-signin" }))
                 {
                    @Html.AntiForgeryToken()
					<div class="form-group">
						<label for="Content" >Old password</label>
				
							<input type="text"  class="form-control" name="OldPassword" id="OldPassword" maxlength="255" placeholder="Enter your password" value=@Model.Password readonly>
						
					</div>
                    <div class="form-group">
						<label for="Content" >New password</label>
				
							<input type="text" class="form-control" name="NewPassword" id="NewPassword" maxlength="255" placeholder="Enter your new password" required autofocus autocomplete="off">
						
					</div>
					<div class="form-actions">
						<button type="submit" class="btn pull-right btn-success"> Save </button>
					</div>
				}
				</fieldset>
                </div>
                    <script type="text/javascript">
                            $("#changePassword").click(function () {
                                $("#ChangePasswordBlock").css("visibility", "visible")
                            });
                    </script>
            </div>
            </div>
            </div>
        </div>
        </div>
      </div>
    </div>
</div>
    <script src="~/Scripts/jquery.min.js"></script>
    <script src="http://twbs.docs.org.ua/dist/js/bootstrap.min.js"></script>
    <script src="http://twbs.docs.org.ua/assets/js/docs.min.js"></script>
    <script src="http://twbs.docs.org.ua/assets/js/ie10-viewport-bug-workaround.js"></script>
  </body>
</html>
